<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Country"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_marginRight="10dp"
        />
    <RelativeLayout
        android:id="@+id/country"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/news"
            android:id="@+id/ivNen"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="#4D000000"
            android:id="@+id/layoutCM"
            >
            <TextView
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/tvTitleCM"
                android:textSize="18dp"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="#fff"
                />
            <TextView
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/tvDescCM"
                android:textSize="14dp"
                android:maxLines="2"
                android:layout_below="@id/tvTitleCM"
                android:textColor="#fff"
                />
            <TextView
                android:paddingLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Time_Data"
                android:id="@+id/tvTimeDateCM"
                android:textSize="11dp"
                android:maxLines="1"
                android:layout_below="@id/tvDescCM"
                android:textColor="#fff"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/shareCM"
                android:src="@drawable/ic_share_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:layout_below="@id/layoutCM"
        android:id="@+id/rcCountry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>