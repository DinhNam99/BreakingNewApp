<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:id="@+id/item"
    android:background="@drawable/edit_search"
    >
    <ImageView
        android:scaleType="fitXY"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:src="@drawable/news"
        android:id="@+id/imageItem"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/imageItem"
        >
        <TextView
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/tvTitleItem"
            android:textSize="18dp"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="#000"
            />
        <TextView
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/tvDescItem"
            android:textSize="14dp"
            android:maxLines="2"
            android:layout_below="@id/tvTitleItem"
            android:textColor="#000"
            />
        <TextView
            android:paddingLeft="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Time_Data"
            android:id="@+id/tvTimeDateItem"
            android:textSize="11dp"
            android:maxLines="1"
            android:layout_below="@id/tvDescItem"
            android:textColor="#000"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_share"
            android:id="@+id/shareItem"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"

            />
    </RelativeLayout>
</RelativeLayout>